<div class="container mt-5">
  <div class="row">
    <div class="col-lg-4">
      <h1>新規投稿</h1>

      <% if @game.errors.any? %>
        <%= @game.errors.count %>件のエラーが発生しました
        <ul>
          <% @game.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>

      <%= form_with model: @game,url: memories_path, method: :post do |f| %>
        <h4>タイトル</h4>
        <%= f.text_field :title %>

        <h4>本文</h4>
        <%= f.text_area :body %>

        <h4>本文2</h4>
        <%= f.text_area :intro %>

        <h4>画像</h4>
        <%= f.file_field :image, accept: "image/*" %>

        <%= f.submit '投稿' %>
      <% end %>
    </div>

    <div class="col-lg-8">
      <h1>投稿一覧</h1>

      <% @games.each do |game| %>

        <p>タイトル</p>
        <span>
          <%= link_to game.title, memory_path(game.id) %>
        </span>

      <% end %>
    </div>
  </div>
</div>
